<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidappstudy.pocsinapp">

    <!-- INTERNET uses-permission 추가 : 안드로이드 앱 http 통신 허용 -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- 전화 걸기 권한을 추가해 줍니다 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- 재생중 화면 어두워짐, 잠김 방지하기 위한 권한 추가 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- 안드로이드앱 구글맵 연결 권한 설정 : 아래 3줄 소스 추가 -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.PocsinApp">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginSuccessActivity"></activity>
        <activity android:name=".SoundsMain"></activity>
        <activity android:name=".SoundsPlay"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".GridView1"></activity>
        <activity android:name=".GridView2"></activity>
        <activity android:name=".GridView3"></activity>

    </application>

</manifest>